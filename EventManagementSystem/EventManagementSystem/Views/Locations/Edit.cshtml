
@model EventManagementSystem.Models.Location

@{
    ViewData["Title"] = "Редагувати локацію";
    Layout = "_Layout";
    var fileName = System.IO.Path.GetFileName(Model.ImagePath);
}

<main class="d-flex justify-content-center">
    <div class="mainContainer col-md-6 mt-4">
        <h2 class="text-center">Редагувати Локацію</h2>
        <hr />

        @using (Html.BeginForm("Edit", "Locations", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.Name, "Назва", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, "Адреса", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, "Опис", new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
              <div class="form-group">
                @Html.LabelFor(m => m.ImagePath, "ImagePath", new { @class = "control-label" })
                <input type="file" name="ImagePath" accept="image/*" class="form-control" />

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-2">
                        <p>Current Photo:</p>
                        <img src="@Model.ImagePath" class="imageOfLocation" alt="Current Photo" />
                        <p>File Name: @System.IO.Path.GetFileName(Model.ImagePath)</p>
                    </div>
                }
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                </div>
            </div>
           
        }
    </div>
</main>