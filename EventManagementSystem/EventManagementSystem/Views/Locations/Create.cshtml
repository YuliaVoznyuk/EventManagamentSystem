@model EventManagementSystem.Models.Location

@{
    ViewData["Title"] = "Додати нову локацію";
    Layout = "_Layout";
}

<main class="d-flex justify-content-center">
    <div class="mainContainer col-md-6 mt-4">
        <h2 class="text-center">Додати локацію</h2>
        <hr />

        @using (Html.BeginForm("Create", "Locations", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, "Назва", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, "Адреса", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, "Опис", new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ImagePath, "Фото", new { @class = "control-label" })
                <input asp-for="ImagePath" type="file" accept="image/*" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        }
    </div>
</main>